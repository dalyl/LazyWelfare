<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:page="clr-namespace:WpfApp.Pages"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="650"  Height="650" Width="800">

    <TabControl x:Name="tabControl"  DockPanel.Dock="Top" Margin="5" VerticalAlignment="Top" TabStripPlacement="Left">
        <TabItem Header="运行" Width="100" Height="50" FontSize="25" >
            <ScrollViewer VerticalScrollBarVisibility="Auto" >
                <page:StatePage  MinHeight="550" Width="660" />
            </ScrollViewer>
        </TabItem>
        <TabItem Header="设置" Width="100" Height="50"  FontSize="25" VerticalAlignment="Bottom">
            <ScrollViewer VerticalScrollBarVisibility="Auto"  Height="Auto">
                <page:SettingPage MinHeight="550"  Width="660"  />
            </ScrollViewer>
        </TabItem>
    </TabControl>

</Window>
