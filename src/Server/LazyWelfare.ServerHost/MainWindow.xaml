<Window x:Class="LazyWelfare.ServerHost.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LazyWelfare.ServerHost"
        xmlns:ctrl="clr-namespace:LazyWelfare.ServerHost.Ctrls"
        xmlns:page="clr-namespace:LazyWelfare.ServerHost.Pages"
        xmlns:form="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="650"  Height="650" Width="800"    ResizeMode="NoResize"  Closing="Window_Closing">
    <Grid>
        
    <TabControl x:Name="tabControl"  DockPanel.Dock="Top" Margin="5" VerticalAlignment="Top" TabStripPlacement="Left">
        <TabItem Header="运行" Width="100" Height="50" FontSize="25" >
            <ScrollViewer VerticalScrollBarVisibility="Auto" >
                <page:StatePage  MinHeight="550" Width="660" />
            </ScrollViewer>
        </TabItem>
        <TabItem Header="设置" Width="100" Height="50"  FontSize="25" VerticalAlignment="Bottom">
            <ScrollViewer VerticalScrollBarVisibility="Auto"  Height="Auto">
                <page:SettingPage MinHeight="550"  Width="660"  />
            </ScrollViewer>
        </TabItem>
    </TabControl>

        <ctrl:NotificationAreaIcon Text="水水水水" MouseDoubleClick="NotificationAreaIcon_MouseDoubleClick"  >
            <!--<local:NotificationAreaIcon.MenuItems>
                <form:MenuItem Text="我在线上" Click="MenuItem_OnlineClick" />
                <form:MenuItem Text="我在线上" Click="MenuItem_OnlineClick" />
            </local:NotificationAreaIcon.MenuItems>-->

            <ctrl:NotificationAreaIcon.MenuStripItems>
                <form:ToolStripMenuItem  Text="关于" Click="MenuItem_AboutUsClick" />
                <form:ToolStripSeparator ></form:ToolStripSeparator>
                <form:ToolStripMenuItem  Text="退出" Click="MenuItem_ExitClick" />
            </ctrl:NotificationAreaIcon.MenuStripItems>

        </ctrl:NotificationAreaIcon>
        
    </Grid>
</Window>
