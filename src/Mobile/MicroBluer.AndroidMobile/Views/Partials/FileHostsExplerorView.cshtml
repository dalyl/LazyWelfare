@model string

<table style="width:100%;height:100%;">
    <tr>
        <th height="35px">hosts 文件</th>
    </tr>
    <tr>
        <td >
            <textarea id="fileContent" style="width:100%;height:100%;min-height:300px;">
                         @Model
             </textarea>
        </td>
    </tr>
    <tr>
        <th height="35px">
            <div class="form-group">
                <!-- Button -->
                <div class="controls">
                    <button class="btn btn-success HostsFileSave">保存修改</button>
                </div>
            </div>

        </th>
    </tr>
</table>
<script>
    $(function () {
        $(".HostsFileSave").click(function () {
            var model = $(".fileContent").val();
            var result = false;
            javascript: result = BuinessScript.SaveHostsFile(model);
            if (result) {
                ViewScript.RequestPartial('#MainContent', "Replace", '@FileHostsIndexView.Partial.Host', '@FileHostsIndexView.Partial.Path');
            }
        });
    })
</script>