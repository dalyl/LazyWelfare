@model  LazyWelfare.AndroidMobile.Models.HostModel

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">服务详情</h3>
    </div>
    <div class="panel-body">
        <form class="HostModelForm">
            <input type="hidden" name="Domain" value="@Model.Domain" />
            <div class="form-group">
                <label class="control-label">服务名称</label>
                <div class="controls">
                    <input name="Name" type="text" placeholder="名称" class="form-control" value="@Model.Name" autocomplete="off">
                    <p class="help-block">服务速记名称</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">服务地址</label>
                <div class="controls">
                    <input name="Address" type="text" placeholder="地址" class="form-control" value="@Model.Address" autocomplete="off">
                    <p class="help-block">http://*****</p>
                </div>
            </div>
        </form>
        <div class="form-group">
            <!-- Button -->
            <div class="controls">
                <button class="btn btn-success HostModelSave">保存</button>
            </div>
        </div>
    </div>
</div>


<script>
    $(function () {
        $(".HostModelSave").click(function () {
            var model = $(".HostModelForm").serialize();
            var result = false;
            javascript: result = BuinessScript.SaveHost(model);
            if (result) {
                 ViewScript.PartialLoad('#MainContent', '@HostsView.Partial.Host', '@HostsView.Partial.Path');
            }
        });
    })
</script>